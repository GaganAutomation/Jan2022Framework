<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Test Suite" verbose="4" thread-count="2"
	parallel="tests">

	<listeners>
		<listener
			class-name="com.opencart.qa.listeners.ExtentReportListener" />

		<listener
			class-name="com.opencart.qa.listeners.AnnotationTransformer" />

		<listener
			class-name="com.opencart.qa.listeners.TestAllureListener" />
	</listeners>


	<test name="Open Cart Login Page Test_chrome">
	
	<parameter name="browser" value="chrome" />
	
		<classes>
			<class name="com.opencart.qa.tests.LoginPageTest" />

		</classes>
	</test>

	<test name="Open Cart Accounts Page Test_firefox">
	
	<parameter name="browser" value="firefox" />	
	
		<classes>
			<class name="com.opencart.qa.tests.AccountPageTest" />
		</classes>
	</test> 

	<!-- <test name="Open Cart Product Info Page Test"> <classes> <class name="com.opencart.qa.tests.ProductInfoPageTest" 
		/> </classes> </test> -->

	<!-- <test name="Open Cart Registration Page Test"> <classes> <class name="com.opencart.qa.tests.RegisterAccountPageTest" 
		/> </classes> </test> -->

</suite>